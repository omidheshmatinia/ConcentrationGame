<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="omidheshmatinia.github.com.concentrationgame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.MasterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.dashboard.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.game.GameActivity" android:screenOrientation="portrait"/>
        <activity
            android:label=""
            android:name=".activity.highscores.HighScoreActivity"
            android:parentActivityName=".activity.dashboard.DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.dashboard.DashboardActivity" />
        </activity>
        <activity
            android:label=""
            android:name=".activity.setting.SettingActivity"
            android:parentActivityName=".activity.dashboard.DashboardActivity"
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.dashboard.DashboardActivity" />
        </activity>
    </application>

</manifest>